                                    <local:TL_Hole Width="60" Height="60" ContentColor="{Binding SamplesContentColor[17].SampleContentColor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SampleRack}}}" Margin="0,40,0,0"/>
                                    <local:TL_Hole Width="60" Height="60" ContentColor="{Binding SamplesContentColor[18].SampleContentColor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SampleRack}}}" Margin="0,40,0,0"/>
                                    <local:TL_Hole Width="60" Height="60" ContentColor="{Binding SamplesContentColor[19].SampleContentColor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:SampleRack}}}" Margin="0,40,0,0"/>
                                </StackPanel>
                            </Canvas>
                        </Viewbox>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">

                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Style>
</UserControl>
