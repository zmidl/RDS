                <Label Width="2"/>
                <TextBlock Width="Auto"  Text="{Binding Path=DataContext.DrumSpeed, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="Column4Header">
