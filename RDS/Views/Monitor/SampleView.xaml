            <StackPanel Orientation="Horizontal">
               <Label Width="2"/>
                <TextBlock Width="Auto"  Text="{Binding Path=DataContext.TempM, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="Column1Header">
            <StackPanel Orientation="Horizontal">
                <zmlc2:WG_CheckBox Width="15" Height="15" IsChecked="{Binding Mode=TwoWay,  Path=DataContext.IsNeedToExportTempIPM, RelativeSource={RelativeSource AncestorType=Window}}" />
