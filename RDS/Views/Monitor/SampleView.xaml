                <Label Width="2"/>
                <TextBlock Width="Auto"  Text="{Binding Path=DataContext.FaultCode, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="Column3Header">
