                <TextBlock Width="Auto"  Text="{Binding Path=DataContext.TempIPM, RelativeSource={RelativeSource AncestorType=Window}}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="Column2Header">
